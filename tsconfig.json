{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2021",
      "DOM"
    ],
    "jsx": "react-native",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": [
      "jest",
      "node"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "extends": "expo/tsconfig.base"
}
